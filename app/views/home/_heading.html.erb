<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="heading-container">
    <div id="card-container">
        <div id="extinguish-background"></div>
        <div id="snap-background"></div>
        <div id="business-card">
            <span class="l1"></span>
            <span class="l2"></span>
            <span class="l3"></span>
            <span class="l4"></span>
            
            <div class="corner" id="top-left"></div>
            <div class="corner" id="top-right"></div>
            <div class="corner" id="bottom-left"></div>
            <div class="corner" id="bottom-right"></div>
            
            
            
            <div id="card-content">
                <h2>Billy Groble</h2>
                <h3>Software Developer</h3>
                <p>bill.groble@gmail.com</p>
                <p>(856) 938-6921</p>
            </div>
        </div>
    </div>
</div>
<script>
$("#top-left").mouseenter(function(){
    $("#snap-background").removeClass("visible");
    $("#extinguish-background").addClass("visible");
});
$("#top-right").mouseenter(function(){
    $("#extinguish-background").removeClass("visible");
    $("#snap-background").addClass("visible");
});

$("#top-left").click(function(){
    $("#business-card").css("transform-origin", "right bottom");
    $("#business-card").addClass("exit-right");
    setTimeout(function() {
        $("#extinguish-background.visible").css("height", "100vh");
        $("#extinguish-background.visible").css("width", "100vw");
        $("#extinguish-background.visible").css("cursor", "pointer");
    }, 1000);
});
$("#extinguish-background").click(function(){
    $("#extinguish-background.visible").css("height", "20vw");
    $("#extinguish-background.visible").css("width", "35vw");
    $("#extinguish-background.visible").css("cursor", "default");
    setTimeout(function() {
        //$("#business-card").css("transform-origin", "right bottom");
        $("#business-card").removeClass("exit-right");
    }, 1000);
});

$("#top-right").click(function(){
    $("#business-card").css("transform-origin", "left bottom");
    $("#business-card").addClass("exit-left");
    setTimeout(function() {
        $("#snap-background.visible").css("height", "100vh");
        $("#snap-background.visible").css("width", "100vw");
        $("#snap-background.visible").css("cursor", "pointer");
    }, 1000);
});
$("#snap-background").click(function(){
    $("#snap-background.visible").css("height", "20vw");
    $("#snap-background.visible").css("width", "35vw");
    $("#snap-background.visible").css("cursor", "default");
    setTimeout(function() {
        //$("#business-card").css("transform-origin", "left bottom");
        $("#business-card").removeClass("exit-left");
    }, 1000);
});
</script>