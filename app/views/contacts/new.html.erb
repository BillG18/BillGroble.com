<div id="contact-back"><i class="material-icons md-36">arrow_back</i></div>
<!--<h3 id="contact-back">Back</h3>-->
<div align="left" id="email-form">
<div align="center">
<h2>Contact Me</h2>
</div>
  <%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' }, :remote => true do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>

    <div>
      <div align="center">
      <%= f.button :submit, 'Send' %>
      </div>
    </div>
  <% end %>
</div>



